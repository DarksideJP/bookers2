<%= notice %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<table>
			<h2> User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpeg" %>
			<hr>
			<p>name <%= @user.name %></p>
			<hr>
			<p>introduciton <%= @user.introduction %></p>
			<%= link_to edit_user_path(@user), class:"btn btn-default btn-block" do %>
			<i class="fas fa-wrench"></i>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
			<% end %>
		</table>
		</div>
		<div class="col-md-9">
			<h2>Books</h2>
			<table>
				<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		</table>
		</div>
	</div>
</div>