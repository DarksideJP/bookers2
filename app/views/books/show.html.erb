<%= notice %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<table>
			<h2> User info</h2>
			<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpg" %>
			<hr>
			<p>name <%= @book.user.name %></p>
			<hr>
			<p>introduciton <%= @book.user.introduction %></p>
			<%= link_to edit_user_path(@book.user), class:"btn btn-default btn-block" do %>
			<i class="fas fa-wrench"></i>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
			<% end %>
		</table>
		</div>
		<div class="col-md-9">
			<h2>book detail</h2>
			<table class="table">
				<tr>
					<td class="col-md-2"><%= attachment_image_tag @book.user, :profile_image, :fill,40, 40, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %></td>
					<td class="col-md-2"><%= @book.title %></td>
					<td class="col-md-2"><%= @book.body %></td>
					<td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success btn-xs" %></td>
					<td><%= link_to "Destroy", book_path(@book), class:"btn btn-danger btn-xs", method: :delete %></td>
				</tr>
			</table>
		</div>
	</div>
</div>