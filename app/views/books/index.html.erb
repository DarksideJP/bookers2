<div class="container">
	<div class="row">
		<div class="col-md-3">
			<table>
			<h2> User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpg" %>
			<hr>
			<p>name <%= @user.name %></p>
			<hr>
			<p>introduciton <%= @user.introduction %></p>
			<%= link_to edit_user_path(@user), class:"btn btn-default btn-block" do %>
			<i class="fas fa-wrench"></i>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class:"btn-block" %>
			<h4>Opinion</h4>
			<%= f.text_area :body, class:"btn-block" %>
			<%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
			<% end %>
		</table>
		</div>
		<div class="col-md-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th class="col-md-3"></th>
						<th class="col-md-3">Title</th>
						<th class="col-md-3">Opinion</th>
					</tr>
				</thead>
				<tbody>
						<% @books.each do |book| %>
						<tr>
							<td class="col-md-3"><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %></td>
							<td class="col-md-3"><%= link_to(book.title, "books/#{book.id}") %></td>
							<td class="cok-md-3"><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>