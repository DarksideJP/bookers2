<h1><p class="text-center">New book</p></h1>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class:"btn-block" %>
<h4>Opinion</h4>
<%= f.text_area :body, class:"btn-block" %>
<%= f.submit "Update Book", class:"btn btn-primary btn-block" %>
<% end %>
<p><%= link_to "Show", book_path %> | <%= link_to "Back", :back %></p>
</div>
</div>
